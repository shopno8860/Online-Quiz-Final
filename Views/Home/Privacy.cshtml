@{
    ViewData["Title"] = "Contact Info";
}

<div class="container py-5">
    <!-- Title Section -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-warning display-4">@ViewData["Title"]</h1>
        <p class="text-light">We'd love to hear from you! Contact us using the information below or send us a message directly.</p>
    </div>

    <!-- Info + Map Section -->
    <div class="row g-5 mb-5">
        <!-- Contact Details -->
        <div class="col-md-6">
            <div class="glass-card p-4 h-100">
                <h4 class="text-white mb-4">📞 Get in Touch</h4>
                <p class="text-light mb-3">
                    <strong class="text-warning">Address:</strong><br />
                    123 Main Street, Dhaka, Bangladesh
                </p>
                <p class="text-light mb-3">
                    <strong class="text-warning">Email:</strong><br />
                    contact@example.com
                </p>
                <p class="text-light mb-0">
                    <strong class="text-warning">Phone:</strong><br />
                    +880 1234 567 890
                </p>
            </div>
        </div>

        <!-- Beautiful Google Map -->
        <div class="col-md-6">
            <div class="glass-card overflow-hidden p-0">
                <div class="map-wrapper rounded-4">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3651.9026453000056!2d90.39105157598664!3d23.75087677867856!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755b894041fd0d7%3A0xc56a8045cc1a6935!2sDhaka%2C%20Bangladesh!5e0!3m2!1sen!2sbd!4v1683542101223!5m2!1sen!2sbd"
                            width="100%"
                            height="100%"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Message Form -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="glass-card p-5">
                <h4 class="text-white mb-4 text-center">✉️ Send Us a Message</h4>
                <form asp-action="SendMessage" method="post">
                    <div class="mb-3">
                        <label class="form-label text-light">Your Name</label>
                        <input name="name" class="form-control rounded-4 border-0" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-light">Your Email</label>
                        <input name="email" type="email" class="form-control rounded-4 border-0" required />
                    </div>
                    <div class="mb-4">
                        <label class="form-label text-light">Message</label>
                        <textarea name="message" class="form-control rounded-4 border-0" rows="5" required></textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-warning px-5 py-2 fw-bold rounded-pill shadow">Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    body {
        background: linear-gradient(90deg, #0f2027, #203a43, #2c5364);
        font-family: 'Segoe UI', sans-serif;
        color: white;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 20px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    .map-wrapper {
        position: relative;
        padding-top: 56.25%; /* 16:9 Aspect Ratio */
    }

        .map-wrapper iframe {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            border-radius: 20px;
            box-shadow: 0 0 30px rgba(0, 255, 255, 0.3);
        }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

        .form-control:focus {
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.8);
            background-color: rgba(255, 255, 255, 0.15);
            color: white;
        }
</style>
