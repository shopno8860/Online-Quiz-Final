@model Online_Quiz_App.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<div class="container py-5">
    <h2 class="text-center text-warning display-5 fw-bold mb-4">Edit User</h2>

    <form asp-action="EditUser" method="post" class="glass-card p-5 mx-auto" style="max-width: 500px;">
        <input type="hidden" asp-for="Id" />

        <div class="mb-4">
            <label asp-for="FullName" class="form-label text-white">Full Name</label>
            <input asp-for="FullName" class="form-control styled-input" required />
        </div>

        <div class="mb-4">
            <label asp-for="Email" class="form-label text-white">Email</label>
            <input asp-for="Email" class="form-control styled-input" required />
        </div>

        <div class="mb-4">
            <label asp-for="Password" class="form-label text-white">Password <span class="text-muted">(leave blank to keep current)</span></label>
            <input asp-for="Password" class="form-control styled-input" type="password" />
        </div>

        <button type="submit" class="btn btn-warning w-100 fw-bold rounded-pill shadow-sm">💾 Save Changes</button>
        <a asp-action="Index" class="btn btn-outline-light w-100 mt-3 rounded-pill">↩️ Cancel</a>
    </form>
</div>

<!-- Custom Styles -->
<style>
    body {
        background: linear-gradient(90deg, #0f2027, #203a43, #2c5364);
        color: white;
        font-family: 'Segoe UI', sans-serif;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.06);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
    }

    .styled-input {
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 12px;
        transition: all 0.3s ease-in-out;
    }

        .styled-input::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .styled-input:focus {
            background: rgba(255, 255, 255, 0.12);
            box-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
            border-color: #ffc107;
            outline: none;
        }

    .btn-warning {
        transition: 0.3s ease;
        box-shadow: 0 4px 14px rgba(255, 193, 7, 0.4);
    }

        .btn-warning:hover {
            background-color: #ff9800;
            box-shadow: 0 0 20px rgba(255, 152, 0, 0.7);
        }

    .btn-outline-light {
        color: white;
        border: 2px solid white;
        transition: 0.3s ease;
    }

        .btn-outline-light:hover {
            background: white;
            color: #2c5364;
            box-shadow: 0 0 14px rgba(255, 255, 255, 0.6);
        }
</style>
