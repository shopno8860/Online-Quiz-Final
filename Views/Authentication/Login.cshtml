@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        font-family: 'Segoe UI', sans-serif;
        color: white;
    }

    .login-container {
        max-width: 400px;
        margin: 60px auto;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(8px);
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }

        .login-container h2 {
            font-weight: 700;
            color: #ffeb3b;
            text-align: center;
            margin-bottom: 25px;
        }

    .form-label {
        font-weight: 500;
        color: #fff;
    }

    .form-control {
        border-radius: 6px;
        padding: 12px;
        background: rgba(255, 255, 255, 0.2);
        border: 1px solid #2a5298;
        color: #fff;
    }

        .form-control:focus {
            border-color: #ffeb3b;
            box-shadow: 0 0 10px rgba(255, 235, 59, 0.5);
        }

    .btn-login {
        background: linear-gradient(90deg, #ffeb3b, #2a5298);
        border: none;
        color: white;
        font-weight: 600;
        padding: 12px;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

        .btn-login:hover {
            background: linear-gradient(90deg, #2a5298, #ffeb3b);
            transform: scale(1.05);
        }

    .alert {
        border-radius: 8px;
        background-color: rgba(255, 255, 255, 0.2);
        color: #ffeb3b;
    }

    .form-icon {
        position: absolute;
        top: 50%;
        left: 12px;
        transform: translateY(-50%);
        color: #6c757d;
    }

    .input-group input {
        padding-left: 36px;
    }

    .text-center a {
        text-decoration: none;
        color: #ffeb3b;
        font-weight: 600;
    }

        .text-center a:hover {
            text-decoration: underline;
        }

    .login-container p {
        color: #ddd;
        text-align: center;
        margin-top: 20px;
    }

    .login-container .forgot-password {
        color: #ffeb3b;
        font-weight: 600;
    }

        .login-container .forgot-password:hover {
            text-decoration: underline;
        }
</style>

<div class="login-container">
    <h2><i class="bi bi-person-circle me-2"></i>Login</h2>

    @if (!string.IsNullOrEmpty(Context.Request.Query["alert"]))
    {
        <div class="alert alert-warning text-center">
            @Context.Request.Query["alert"]
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <form asp-action="Login" method="post">
        <div class="mb-3 position-relative">
            <label for="email" class="form-label">Email</label>
            <i class="bi bi-envelope-fill form-icon"></i>
            <div class="input-group">
                <input type="email" id="email" name="email" class="form-control" required />
            </div>
        </div>

        <div class="mb-4 position-relative">
            <label for="password" class="form-label">Password</label>
            <i class="bi bi-lock-fill form-icon"></i>
            <div class="input-group">
                <input type="password" id="password" name="password" class="form-control" required />
            </div>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-login">Login</button>
        </div>
    </form>

    <div class="text-center mt-3">
        <span>Don't have an account?</span> <a asp-action="Registration" asp-controller="Authentication" class="text-primary">Register</a>
    </div>
    <div class="text-center mt-3">
        <a href="/Authentication/ForgotPassword" class="forgot-password">Forgot Password?</a>
    </div>
</div>
